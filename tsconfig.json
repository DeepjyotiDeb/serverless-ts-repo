{
  "compilerOptions": {
    "lib": ["ES2017", "ES2018", "ES2019", "ES2020"],
    "removeComments": true,
    "module": "ES2020",
    "moduleResolution": "NodeNext",
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "build",
    "declaration": false,
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": ["./**/*.ts", "./src/*.ts", "../../libs/*.ts", "./models"],
  "exclude": [
    "./node_modules/*",
    "./dist",
    "./**/*.spec.ts",
    "./**/*.spec.js",
    "./node_modules/*"
  ]
}
